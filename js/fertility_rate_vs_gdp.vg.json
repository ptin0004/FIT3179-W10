{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Global Fertiliy Rate vs GDP in 2023",
    "data": {
      "url": "https://raw.githubusercontent.com/ptin0004/FIT3179-W10/main/data/world-data-2023.csv"
    },
    "params": [
      {
        "name": "Population_Above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 500000000,
          "step": 1000000,
          "name": "Minimum Population: "
        }
      },
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.Fertility_Rate > 0"},
      {"filter": "datum.GDP > 0"},
      {"filter": "datum.Population > Population_Above"},
      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      },
      {
        "calculate": "(datum.GDP / 1e6) / (datum.Population / 10000)",
        "as": "GDP per 10,000 Population (Millions)"
      }
    ],
    "encoding": {
      "x": {
        "field": "Fertility_Rate",
        "type": "quantitative",
        "title": "Fertility Rate(%)",
        "axis": {"tickCount": 8},
        "scale": {"type": "linear","domain": [0, 8]}
      },
      "y": {
        "field": "GDP per 10,000 Population (Millions)",
        "type": "quantitative",
        "title": "GDP per 10,000 Population (Millions)",
        "axis": {"tickCount": 4},
        "scale": {"type": "log", "domain": [1, 10000]}
      }
    },
    "layer": [
      { 
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "Population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Fertility_Rate", "type": "quantitative", "format": ",", "title": "Fertility Rate(%)"},
            {"field": "GDP", "type": "quantitative", "format": ","},
            {
                "field": "GDP per 10,000 Population (Millions)",
                "type": "quantitative",
                "format": ".2f"
              }
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Fertility_Rate", "type": "quantitative", "format": ",", "title": "Fertility Rate(%)"},
            {"field": "GDP", "type": "quantitative", "format": ","},
            {
              "field": "GDP per 10,000 Population (Millions)",
              "type": "quantitative",
              "format": ".2f"
            }
          ]
        }
      }
    ]
  }